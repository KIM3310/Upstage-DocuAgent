# Demo mode (no external API calls)
DOCUAGENT_DEMO_MODE=1
# Or: DOCUAGENT_MODE=demo

# Live mode (Upstage API)
# DOCUAGENT_DEMO_MODE=0
# UPSTAGE_API_KEY=your_api_key_here
# UPSTAGE_BASE_URL=https://api.upstage.ai/v1
# UPSTAGE_SOLAR_MODEL=solar-pro2

# Optional server bind overrides
# DOCUAGENT_HOST=127.0.0.1
# DOCUAGENT_PORT=8000

# Optional security/runtime tuning
# DOCUAGENT_CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
# DOCUAGENT_COOKIE_SECURE=0
# DOCUAGENT_COOKIE_SAMESITE=lax
# DOCUAGENT_IE_MAX_PAGES=3
# DOCUAGENT_ALLOWED_EXTENSIONS=.pdf,.png,.jpg,.jpeg,.tif,.tiff
# DOCUAGENT_UPSTREAM_TIMEOUT_SEC=90
# DOCUAGENT_UPSTREAM_RETRY_TOTAL=2

# Optional per-session rate limits
# DOCUAGENT_RATE_LIMIT_WINDOW_SEC=60
# DOCUAGENT_RATE_LIMIT_ANALYZE_MAX=12
# DOCUAGENT_RATE_LIMIT_CHAT_MAX=120
# DOCUAGENT_RATE_LIMIT_RUNTIME_MAX=60
# DOCUAGENT_MAX_RATE_LIMIT_SESSIONS=2000

# Optional async analysis job cache
# DOCUAGENT_MAX_ANALYSIS_JOBS=500
# DOCUAGENT_MAX_ACTIVE_ANALYSIS_JOBS=12
# DOCUAGENT_MAX_ACTIVE_ANALYSIS_JOBS_PER_SESSION=4
# DOCUAGENT_ANALYSIS_JOB_TTL_SEC=21600

# Optional in-memory data retention
# DOCUAGENT_DOC_TTL_SEC=86400

# Optional lightweight request metrics window
# DOCUAGENT_METRICS_SAMPLE_SIZE=200
# DOCUAGENT_MAX_METRICS_PATHS=256
